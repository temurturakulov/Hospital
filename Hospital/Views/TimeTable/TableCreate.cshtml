
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Hospital.Models.Doctor
@{
    ViewData["Title"] = " Заполнение расписания работы";
}
@*<link rel="stylesheet" type="text/css" href="js/jquery.datetimepicker.css" />
<script src="js/jquery.js"></script>
<script src="js/jquery.datetimepicker.js"></script>*@
<h2>@ViewData["Title"]</h2>



<div asp-validation-summary="All"></div>
<form method="POST" asp-controller="TimeTable" asp-action="TableCreate">

    <div>
        <label>Специальность</label><br /><input type="text" value="@Model.SpecialtyId.Name" />
    </div>
    <div>
        <label>Фамилия</label><br /><input type="text" value="@Model.UserId.FirstName" />
    </div>
    <div>
        <label>Имя</label><br /><input type="text" value="@Model.UserId.SecondName" />
    </div>
    <div>
        <label>Отчество</label><br /><input type="text" value="@Model.UserId.LastName" />
    </div>
    <input name="DoctorId" hidden />
    <div>
        <label>Понедельник</label><br />
        <input type="text"  name="Monday" />
        @*<input type="text" name="Monday"/>
        <script>
            $('#datetimepicker').datetimepicker();
        </script>*@
    </div>
    <div>
        <label>Вторник</label><br />
        <input type="text" name="Tuesday" />
        @*<script>
            $('#datetimepicker').datetimepicker();
        </script>*@
    </div>
    <div>
        <label>Среда</label><br />
        <input type="text" name="Thirsday" />
        @*<script>
            $('#datetimepicker').datetimepicker();
        </script>*@
    </div>
    <div>
        <label>Четверг</label><br />
        <input type="text" name="Wednesday" />
        @*<script>
            $('#datetimepicker').datetimepicker();
        </script>*@
    </div>
    <div>
        <label>Пятница</label><br />
        <input type="text" name="Friday" />
        @*<script>
            $('#datetimepicker').datetimepicker();
        </script>*@
    </div>

    <input type="submit" value="Добавить" />
</form>
