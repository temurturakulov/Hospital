
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<Hospital.Models.DoctorSpecialty>
@{
    ViewData["Title"] = "Список специалистов";
}
<h2>@ViewData["Title"]</h2>

<p><a asp-action="SpecialtyCreate" asp-controller="Specialty">Добавить специалиста</a></p>

<table class="table">
    <thead>
        <tr><th>Специальность</th>
    </thead>

    @foreach (var specialty in Model)
    {


        <tr>
            <td>@specialty.Name</td>
            <td>
                <form method="post" asp-action="SpecialtyDelete" asp-controller="Specialty">
                    <input type="text" hidden value="@specialty.Id" name="id">
                    <input type="submit" class="btn btn-sm btn-danger" value="Удалить" />

                </form>
            </td>
            <td>
                <form method="get" asp-action="SpecialtyEdit" asp-controller="Specialty">
                    <input type="text" hidden value="@specialty.Id" name="id">
                    <input type="submit" class="btn btn-sm btn-danger" value="Изменить" />
                </form>
            </td>


        </tr>


    }



</table> 